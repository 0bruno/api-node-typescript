{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "Typescript Node.js API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/src/index.js",
    "start:dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/index",
    "lint": "eslint ./src ./test --ext .ts --fix",
